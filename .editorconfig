root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{nim,nims}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,ts}]
indent_size = 2

[*.{css,sass,scss}]
indent_size = 2

[*.{html,vue}]
indent_size = 2
